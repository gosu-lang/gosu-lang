<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>full</id>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>

  <dependencySets>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
  </dependencySets>

  <files>
    <file>
      <source>${project.build.scriptSourceDirectory}/gosu</source>
      <outputDirectory>bin</outputDirectory>
      <fileMode>0775</fileMode>
      <filtered>true</filtered>
      <lineEnding>unix</lineEnding>
    </file>
    <file>
      <source>${project.build.scriptSourceDirectory}/gosu.cmd</source>
      <outputDirectory>bin</outputDirectory>
      <filtered>true</filtered>
      <lineEnding>dos</lineEnding>
    </file>
    <file>
      <source>${project.build.scriptSourceDirectory}/gosuc</source>
      <outputDirectory>bin</outputDirectory>
      <fileMode>0775</fileMode>
      <filtered>true</filtered>
      <lineEnding>unix</lineEnding>
    </file>
    <file>
      <source>${project.build.scriptSourceDirectory}/gosuc.cmd</source>
      <outputDirectory>bin</outputDirectory>
      <filtered>true</filtered>
      <lineEnding>dos</lineEnding>
    </file>
    <file>
      <source>${project.build.scriptSourceDirectory}/gosudoc</source>
      <outputDirectory>bin</outputDirectory>
      <fileMode>0775</fileMode>
      <filtered>true</filtered>
      <lineEnding>unix</lineEnding>
    </file>
    <file>
      <source>${project.build.scriptSourceDirectory}/gosudoc.cmd</source>
      <outputDirectory>bin</outputDirectory>
      <filtered>true</filtered>
      <lineEnding>dos</lineEnding>
    </file>
  </files>
  <fileSets>
    <fileSet>
      <directory>${project.build.textDirectory}</directory>
      <outputDirectory/>
      <filtered>true</filtered>
    </fileSet>
  </fileSets>
</assembly>
