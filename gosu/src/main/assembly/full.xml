<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>full</id>
  <formats>
    <format>dir</format>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>

  <dependencySets>
    <dependencySet>
      <excludes>
        <exclude>org.gosu-lang.gosu:gosu-process</exclude>
        <exclude>org.gosu-lang.gosu:gosu-servlet</exclude>
      </excludes>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.gosu-lang.gosu:gosu-process</include>
        <include>org.gosu-lang.gosu:gosu-servlet</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>ext</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
  </dependencySets>

  <files>
    <file>
      <source>${project.build.scriptSourceDirectory}/gosu</source>
      <outputDirectory>bin</outputDirectory>
      <fileMode>0775</fileMode>
      <filtered>true</filtered>
      <lineEnding>unix</lineEnding>
    </file>
    <file>
      <source>${project.build.scriptSourceDirectory}/gosu.cmd</source>
      <outputDirectory>bin</outputDirectory>
      <filtered>true</filtered>
      <lineEnding>dos</lineEnding>
    </file>
    <file>
      <source>${project.build.scriptSourceDirectory}/full.gosulaunch.properties</source>
      <outputDirectory>bin</outputDirectory>
      <destName>gosulaunch.properties</destName>
      <filtered>true</filtered>
    </file>
  </files>
  <fileSets>
    <fileSet>
      <directory>${project.build.textDirectory}</directory>
      <outputDirectory/>
      <filtered>true</filtered>
    </fileSet>
  </fileSets>
</assembly>
